# EvoMind Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=evomind_root
MYSQL_USER=evomind
MYSQL_PASSWORD=evomind123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRATION=86400000

# WeChat OAuth Configuration
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# SMS Configuration (Tencent Cloud)
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key
SMS_SDK_APP_ID=your-sdk-app-id
SMS_SIGN_NAME=your-sign-name
SMS_TEMPLATE_ID_LOGIN=your-template-id

# Baidu OCR Configuration
BAIDU_OCR_APP_ID=your-ocr-app-id
BAIDU_OCR_API_KEY=your-ocr-api-key
BAIDU_OCR_SECRET_KEY=your-ocr-secret-key

# Baidu AI (ERNIE Bot) Configuration
BAIDU_AI_API_KEY=your-ai-api-key
BAIDU_AI_SECRET_KEY=your-ai-secret-key

# Xunfei Voice Configuration
XUNFEI_APP_ID=your-xunfei-app-id
XUNFEI_API_KEY=your-xunfei-api-key
XUNFEI_API_SECRET=your-xunfei-api-secret

# Payment Configuration
# WeChat Pay
WECHAT_MCH_ID=your-mch-id
WECHAT_MCH_KEY=your-mch-key
WECHAT_NOTIFY_URL=https://your-domain.com/api/v1/pay/wechat/callback

# Alipay
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=your-private-key
ALIPAY_PUBLIC_KEY=your-public-key
ALIPAY_NOTIFY_URL=https://your-domain.com/api/v1/pay/alipay/callback

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_AI_GENERATION=true
ENABLE_CONFLICT_DETECTION=true
